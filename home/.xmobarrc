Config {
    font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*",
    bgColor = "black",
    fgColor = "#cccccc",
    position = Bottom,
    lowerOnStart = True,
    commands = [
        Run Cpu [
            "--Low", "3",
            "--High", "50",
            "--normal", "green",
            "--high", "red"
            ] 10,
        Run Memory [
            "--template", "Mem: <usedratio>%"
            ] 10,
        Run Swap [] 10,
        Run Network "eth0" [
            "--template", "<dev>:  <rx> KB/s down  <tx> KB/s up",
            "--Low", "0",
            "--High", "32",
            "--normal", "green",
            "--high","red"
            ] 10,
        Run Date "%A, %d. %B %Y (KW %W)" "date" 600,
        Run Date "%H:%M:%S Uhr" "time" 10,
        Run StdinReader
    ],
    sepChar = "%",
    alignSep = "}{",
    template = " %StdinReader%} { <fc=#666666>|</fc> %cpu% <fc=#666666>|</fc> %memory% <fc=#666666>|</fc> %swap% <fc=#666666>|</fc> %eth0% <fc=#666666>|</fc> %date% <fc=#666666>|</fc> %time% "
}
